<h1>
  <%= @article.title %>
</h1>
<p>
  <%= @article.content %>
  <div class="">auteur :
    <%= @article.user.username %>
    <p>
      catégorie : <%= @article.category.description %>
    </p>
  </div>
</p>
<p><a href="/blog/index">Retourner à l’index</a></p>

<h2>Commentaires</h2>

<% if user_signed_in? %>
  <%= form_for :comment, :url => {:controller => "blog_articles", :action => "comment", :method => 'post'} do |f| %>
    <input id="comment[blog_article_id]" name="comment[blog_article_id]" type="hidden" value="<%= @article.id %>" />
    <input id="comment[user_id]" name="comment[user_id]" type="hidden" value="<%= current_user.id %>" />
    <%= f.text_area :content %>
    <%= f.submit :valider %>
  <% end %>
<% end %>
<div class="article_comments">
  <% @comments.each do | comment | %>
  <div class="article_comments_card">
    <div class="article_comments_card--user">
      <%= comment.user.username %>
    </div>
    <div class="article_comments_card--message">
      <%= comment.content %>
    </div>
  </div>
  <% end %>
</div>
