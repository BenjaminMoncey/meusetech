<h1>Polls::Polls#show</h1>
<p>Find me in app/views/polls/polls/show.html.erb</p>

<h1><%= @poll.title %></h1>
<% @questions.each do |question| %>
  <h3><%= question.name %></h3>
  <% if question.options != nil %>
    <select>
      <% @options.each_with_index do | value, key | %>
        <option value="<%= key %>"> <%= value %></option>
      <% end %>
    </select>
  <% else%>
  <input type="text" name="field[<%= question.id %>]" />
  <% end %>

<% end %>
